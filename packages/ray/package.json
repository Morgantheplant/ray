{
  "name": "@wework/ray",
  "description": "Resources for building interfaces with WeWork's design system",
  "main": "index.js",
  "author": "Adam Raider <adam.raider@wework.com>",
  "scripts": {
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\"",
    "storybook": "start-storybook -s ./stories/static -p 6006",
    "build-storybook": "NODE_ENV=production build-storybook -c .storybook -o .out -s ./stories/static",
    "build": "yarn prebuild && gulp html:source sass:source sass:compiled",
    "prebuild": "gulp clean",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": "10.13.0"
  },
  "license": "ISC",
  "dependencies": {
    "@babel/core": "7.2.2",
    "babel-loader": "8.0.5",
    "css-loader": "1.0.1",
    "del": "3.0.0",
    "file-loader": "3.0.1",
    "gulp": "4.0.0",
    "gulp-autoprefixer": "6.0.0",
    "gulp-babel": "8.0.0",
    "gulp-rename": "1.4.0",
    "gulp-sass": "4.0.2",
    "gulp-sourcemaps": "2.6.4",
    "gulp-uglify": "3.0.1",
    "gulp-util": "3.0.8",
    "mini-css-extract-plugin": "0.4.4",
    "node-sass": "4.11.0",
    "normalize.css": "8.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-loader": "3.0.0",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "resolve-url-loader": "3.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "url-loader": "1.1.2"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "4.1.7",
    "@storybook/addon-backgrounds": "4.1.11",
    "@storybook/addon-options": "4.1.11",
    "@storybook/addon-viewport": "4.0.9",
    "@storybook/react": "4.1.6",
    "cz-conventional-changelog": "2.1.0",
    "lodash": "4.17.11",
    "semantic-release": "^15.13.3",
    "storybook-addon-jsx": "6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:WeConnect/ray.git"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "style": {
    "scss": "lib/application.scss"
  },
  "files": [
    "css/**/*",
    "es/**/*",
    "html/**/*",
    "scripts/**/*",
    "scss/**/*",
    "src/**/*",
    "umd/**/*"
  ]
}
